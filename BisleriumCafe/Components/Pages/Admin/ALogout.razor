@page "/alogout"
@using BisleriumCafe.Components.Models
@inject NavigationManager NavManager
@layout BisleriumCafe.Components.Layout.Admin.AdminLayout



<div class="logout-body">
    <div class="form-logout">
        <h3>Logout</h3>
        <div class="options-container">
            <button class="btn-confirm" @onclick="HandleLogout">
                Confirm
            </button>
            <button class="btn-home" @onclick="NavigateToHomePage">
                Home
            </button>
        </div>
    </div>
</div>

@code {
    private void HandleLogout()
    {
        NavManager.NavigateTo("/");
    }

    private void NavigateToHomePage()
    {
        NavManager.NavigateTo("/order");
    }
}